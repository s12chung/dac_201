<div class="menu grid_2 prefix_1">
<h4>Menu</h4>
<ul class="menu-items fade-1">
<% Page.all_by_number.each do |page| %>
    <% if @page == page %>
        <li class="curr"><%= link_to page.title, {:filename => page.filename} %></li>
        <% else %>
        <li><%= link_to page.title, :filename => page.filename %></li>
        <% end %>
    <% end %>
</ul>
</div>

