  <div class="title">
    <h2><%= @page.title %></h2>
  </div>
  <div class="content">
    <%= @page.contents %>
  </div>
  <div class="footer clearfix">
    <% temp_page = @page.next
       if temp_page %>
        <div class="next">
          <%= link_to "#{temp_page.title} Â»", :filename => temp_page.filename %>
        </div>
    <% end %>
